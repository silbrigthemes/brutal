                    .append($("<style type='text/css'> .track-artist{color:{color:Text} !important} </style>")); 
                 $('iframe.tumblr_audio_player').contents().find("head")
                    .append($("<style type='text/css'> .play-pause{color:{color:Accent} !important} </style>"));    
            });
        });
    </script>
    
